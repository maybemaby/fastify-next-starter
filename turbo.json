{
  "$schema": "https://turbo.build/schema.json",

  "pipeline": {
    "build": {
      "env": ["VERCEL_URL", "RENDER_INTERNAL_HOSTNAME", "API_ROOT"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "test": {
      "outputs": []
    }
  }
}
